<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ColaProgress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="title_back_android">
        <item name="android:layout_width">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/titlebar_bar_btn_bg_android</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/actionbar_back_btn1</item>
    </style>
    <style name="title_back_ios">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/btn_back_ios_transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/titlebar_bar_back_ios</item>
        <item name="android:drawablePadding">5.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:textColor">@drawable/titlebar_bar_right_ios</item>
        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="title_bg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:background">@drawable/titlebar_bar</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="title_right_android">
        <item name="android:layout_width">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/titlebar_bar_btn_bg_android</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="title_right_ios">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/btn_back_ios_transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:textColor">@drawable/titlebar_bar_right_ios</item>
        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title_title_android" parent="title_text">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="title_title_ios" parent="title_text">
        <item name="android:gravity">center</item>
    </style>
</resources>